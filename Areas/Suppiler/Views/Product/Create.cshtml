@model ASM.Models.Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Areas/Suppiler/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Create Product</h4>
    <hr />
    <div class="row d-flex justify-content-center">

        <div class="col-md-8">
            <form asp-action="Create" asp-controller="Product" method="POST" enctype="multipart/form-data" asp-route-SimilarTo="@Model?.ProductId">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UserID" class="control-label" style="margin-top:30px"></label>
                    @{
                        int userId = Model?.UserID ?? 0;
                    }
                    @Html.DropDownListFor(model => userId, ViewBag.UserID as SelectList, "Select User", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label asp-for="CategoryID" class="control-label"></label>
                    @{
                        int categoryId = Model?.CategoryID ?? 0;
                    }
                    @Html.DropDownListFor(model => categoryId, ViewBag.CategoryID as SelectList, "Select Category", new { @class = "form-control" })
                </div>


                <div class="form-group">
                    <label asp-for="SizeID" class="control-label"></label>
                    @Html.DropDownList("SizeID", ViewBag.SizeID as SelectList, "Select Size", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label asp-for="ColorDetailID" class="control-label"></label>
                    @Html.DropDownList("ColorDetailID", ViewBag.ColorDetailID as SelectList, "Select Color Detail", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label asp-for="ProductName" class="control-label"></label>
                    <input asp-for="ProductName" class="form-control" name="ProductName" value="@Model?.ProductName"/>
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label"></label>
                    <input asp-for="Price" class="form-control" name="Price" value="@Model?.Price"/>
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Quantity" class="control-label"></label>
                    <input asp-for="Quantity" class="form-control" name="Quantity" />
                    <span asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" name="Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label"></label>
                    <input type="file" id="imageFile" name="imageFile" accept="image/*" class="form-control" name="Image" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>

        </div>
    </div>

    <div class="text-center">
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>